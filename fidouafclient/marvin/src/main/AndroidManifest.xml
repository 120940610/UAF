<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ebayopensource.fidouaf.marvin">

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher"
        android:name="org.ebayopensource.fidouaf.marvin.ApplicationContextProvider"
        android:label="@string/app_name" android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="org.ebayopensource.fidouaf.marvin.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FidoUafOpActivity"
            android:label="@string/android_uaf_client" >
            <intent-filter>
                <action android:name="org.ebayopensource.fidouaf.marvin.FidoUafClientActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.fidoalliance.intent.FIDO_OPERATION" />

                <data android:mimeType="application/fido.uaf_client+json" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
